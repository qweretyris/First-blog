<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>

    <nav class="navbar" style="background-color: #e3f2fd;">
      <div class="container-fluid">
        <a class="navbar-brand h1" href="/">Blog</a>
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
          <% unless current_user.present? %>
            <%= link_to "Sign up", new_user_registration_path, class:"btn btn-primary me-md-2" %>
            <%= link_to "Log in",  new_user_session_path, class:"btn btn-primary" %>
          <% else %> 
          <%= link_to "Sign out", destroy_user_session_path, data: {
                    turbo_method: :delete }, class:"btn btn-primary" %>
          <% end %>
          </div>
      </div>

    </nav>

    <% if flash[:notice].present? %>
      <p> <%= flash[:notice] %></p>
    <% end %>

        
    <%= yield %>
  </body>
</html>
